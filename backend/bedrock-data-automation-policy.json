{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "BedrockDataAutomationAccess",
            "Effect": "Allow",
            "Action": [
                "bedrock:*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3AccessForBedrockResults",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::[REDACTED-BEDROCK-BUCKET]",
                "arn:aws:s3:::[REDACTED-BEDROCK-BUCKET]/*",
                "arn:aws:s3:::province-documents-[REDACTED-ACCOUNT-ID]-us-east-1",
                "arn:aws:s3:::province-documents-[REDACTED-ACCOUNT-ID]-us-east-1/*"
            ]
        }
    ]
}
