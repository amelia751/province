# IAM User Credentials (general AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Bedrock-specific IAM Credentials (use these for Bedrock API calls)
BEDROCK_AWS_ACCESS_KEY_ID=your_bedrock_access_key_id
BEDROCK_AWS_SECRET_ACCESS_KEY=your_bedrock_secret_access_key

# Data Automation Credentials (use these for Data Automation API calls)
DATA_AUTOMATION_AWS_ACCESS_KEY_ID=your_data_automation_access_key_id
DATA_AUTOMATION_AWS_SECRET_ACCESS_KEY=your_data_automation_secret_access_key

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id

# Bedrock Configuration
BEDROCK_REGION=us-east-1
# Using Claude 3.5 Sonnet - most capable model available
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20240620-v1:0

# Environment
ENVIRONMENT=development
DEBUG=true

# S3 Configuration
DOCUMENTS_BUCKET_NAME=province-documents-<account-id>-us-east-1
TEMPLATES_BUCKET_NAME=province-templates-<account-id>-us-east-1

# LiveKit Configuration (optional - for real-time voice features)
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Agent Configuration
AGENT_ENV=production
AGENT_MAX_CONCURRENT_JOBS=8
AGENT_LOAD_THRESHOLD=0.9
AGENT_SHUTDOWN_TIMEOUT=60
AGENT_NAMESPACE=province-ai-agent
HEALTH_CHECK_PORT=8080

# Optional TTS/STT API Keys
DEEPGRAM_API_KEY=your_deepgram_api_key
CARTESIA_API_KEY=your_cartesia_api_key

# Google Cloud Credentials (optional - for additional services)
GOOGLE_APPLICATION_CREDENTIALS=your_google_service_account_json

# Pinecone Configuration (optional - for vector search)
PINECONE_API_KEY=your_pinecone_api_key

# Redis Configuration (optional)
REDIS_URL=your_redis_url

# Frontend URL (for callbacks)
FRONTEND_URL=http://localhost:3000

# Flask/CORS Configuration
FLASK_ENV=production
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Tax DynamoDB Table Names (us-east-1)
TAX_ENGAGEMENTS_TABLE_NAME=province-tax-engagements
TAX_DOCUMENTS_TABLE_NAME=province-tax-documents
TAX_PERMISSIONS_TABLE_NAME=province-tax-permissions
TAX_DEADLINES_TABLE_NAME=province-tax-deadlines
TAX_CONNECTIONS_TABLE_NAME=province-tax-connections
DOCUMENT_VERSIONS_TABLE_NAME=province-document-versions
DOCUMENT_NOTIFICATIONS_TABLE_NAME=province-document-notifications
FORM_MAPPINGS_TABLE_NAME=province-form-mappings

# Bedrock Agent IDs (us-east-1)
REVIEWAGENT_AGENT_ID=your_review_agent_id
TAXINTAKEAGENT_AGENT_ID=your_tax_intake_agent_id
TAXPLANNERAGENT_AGENT_ID=your_tax_planner_agent_id

# Kaggle Configuration (optional - for dataset downloads)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_key

# Bedrock Data Automation Configuration
BEDROCK_DATA_AUTOMATION_PROJECT_ARN=arn:aws:bedrock:us-east-1:<account-id>:data-automation-project/<project-id>
BEDROCK_DATA_AUTOMATION_PROFILE_ARN=arn:aws:bedrock:us-east-1:<account-id>:data-automation-profile/us.data-automation-v1
BEDROCK_OUTPUT_BUCKET_NAME=bedrock-bda-us-east-1-<output-bucket-id>
